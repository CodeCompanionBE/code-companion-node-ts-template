{
  "name": "code-companion-node-ts-template",
  "version": "1.0.0",
  "description": "Template for fastify apps",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "node --watch -r dotenv/config src/index.ts",
    "test": "LOG_LEVEL=error node --test src/**/*.test.ts",
    "lint": "biome lint src",
    "docker:build": "docker build --build-arg PORT=3000 -t code-companion-node-ts-template .",
    "docker:run": "docker run -p  code-companion-node-ts-template"
  },
  "keywords": [],
  "author": "Niels Van den broeck",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/supertest": "^6.0.3",
    "dotenv": "^16.5.0",
    "node-test-junit-reporter": "^2.0.1",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@fastify/autoload": "^6.3.0",
    "@types/node": "^25.0.3",
    "fastify": "^5.2.0"
  }
}
