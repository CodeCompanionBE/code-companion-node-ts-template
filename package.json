{
  "name": "code-companion-node-ts-template",
  "version": "1.0.0",
  "description": "Template for fastify apps",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "node --watch -r dotenv/config src/index.ts",
    "test": "LOG_LEVEL=error node --test src/**/*.test.ts",
    "lint": "biome lint src",
    "build": "rimraf dist && tsc && cp package*.json dist",
    "docker:build": "docker build --build-arg PORT=3000 -t code-companion-node-ts-template .",
    "docker:run": "docker run -p 3000:3000 code-companion-node-ts-template"
  },
  "keywords": [],
  "author": "Niels Van den broeck",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/supertest": "^6.0.3",
    "dotenv": "^17.2.3",
    "node-test-junit-reporter": "^2.0.1",
    "rimraf": "^6.1.2",
    "supertest": "^7.2.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@fastify/autoload": "^6.3.1",
    "@types/node": "^25.0.3",
    "fastify": "^5.7.1"
  }
}
